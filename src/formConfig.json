{
  "title": "用户信息表单",
  "fields": [
    {
      "name": "username",
      "label": "用户名",
      "type": "text",
      "required": true,
      "minLength": 3,
      "maxLength": 20,
      "grid": {
        "xs": 12,
        "sm": 6
      }
    },
    {
      "name": "email",
      "label": "邮箱",
      "type": "email",
      "required": true,
      "grid": {
        "xs": 12,
        "sm": 6
      }
    },
    {
      "name": "age",
      "label": "年龄",
      "type": "number",
      "required": true,
      "min": 18,
      "max": 100,
      "grid": {
        "xs": 12,
        "sm": 4
      }
    },
    {
      "name": "role",
      "label": "角色",
      "type": "select",
      "required": true,
      "options": [
        { "value": "user", "label": "普通用户" },
        { "value": "admin", "label": "管理员" }
      ],
      "grid": {
        "xs": 12,
        "sm": 8
      }
    }
  ],
  "layout": {
    "container": {
      "maxWidth": "md",
      "spacing": 2
    }
  }
} 